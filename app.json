{
  "expo": {
    "name": "Splitsy",
    "slug": "splitsy-expense-app",
    "version": "1.0.0",
    "orientation": "portrait",

    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "Split expenses effortlessly with receipt scanning and group management",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#7c3aed"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.jettnguyen.splitsy"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#7c3aed"
      },
      "package": "com.jettnguyen.splitsy",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to scan receipts for expense tracking.",
          "cameraPermission": "The app accesses your camera to scan receipts for expense tracking."
        }
      ]
    ]
  }
}